.capsule {
  margin-left: 10px;
  height: 30px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16px;
  display: flex;
  align-items: center;
}
.capsules{
  background: none;
}
.back {
  width: 45px;
  height: 60%;
  position: relative;
}

.back:nth-child(2) {
  border-left: 1px solid #fff;
}

.capsule .img {
  width: 48%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.title {
  color: white;
  position: absolute;
  top: 6px;
  left: 104px;
  right: 104px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}