/* component/console/index.wxss */
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 640rpx;
  height: 600rpx;
  background-color: #fff;
  /* background-image: linear-gradient(135deg, #FF9900, #F7C67E); */
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -300rpx 55rpx 0 55rpx;
  border-radius: 30rpx;
}
.openSetting_box{
  width: 520rpx;
  margin: -300rpx 115rpx 0 115rpx;
}
.scrollWrap{
  overflow: hidden scroll;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.ticketDetail {
  /* background-image: linear-gradient(#FEB906, #FE7B16); */
  background: #FEA305;
}

.drawer_box_content {
  box-sizing: border-box;
  padding: 10rpx;
  color: #353535;
}

.drawer_box_contentText {
  width: 100%;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.authorization_title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
}

.authorization_content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  /* text-indent: 42rpx; */
}

.btnWrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 0;
  position: absolute;
  left: 0;
  top: 600rpx;
  margin-top: -112rpx;
  z-index: 1002;
}

.drawer_box_btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 20rpx;
  /* background-image: linear-gradient(135deg, #FF6F03, #FEB906); */
  background-color: #F21D28;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.drawer_box_btn:last-child {
  background-color: #ff9900;
}

/* 兑换券 */
.openSetting{
  border-radius: 35rpx;
}
.openSetting:first-child{
  border: 2rpx solid #ff9900;
  color: #ff9900;
  background: #fff;
}

/* 新人券btn */
.ticketBtn {
  width: 560rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: #FFDC28;
  font-size: 44rpx;
  margin-top: 100rpx;
}

.ticketBtn::after,.isVip::after {
  border: none;
}

.isVip{
  border: 2rpx solid #ff9900;
  color: #ff9900;
  background: #fff;
  border-radius: 35rpx;
  color: #aaa;
  border: 2rpx solid #aaa;
}