/* pages/orderList/orderList.wxss */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.content .content-imgWrap {
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow-y: overlay;
  overflow-x: hidden;
  background: rgba(0, 0, 0, 0);
}

.content view image {
  width: 100%;
}

.mainView {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0px;
  left: 0px;
  /* margin: 168rpx 0; */
}

.scroll-view .list-item {
  margin: 20rpx auto;
  width: 690rpx;
  /* height: 400rpx; */
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx 0 rgba(0, 0, 0, 0.08);
  /* position: relative; */
  /* background-color: rgba(255,255,255,0.5); */
  background-color: #fff;
  color: #333;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.mainView .list-item:first-child {
  margin-top: 150rpx;
}

.mainView .list-item:last-child {
  margin-bottom: 160rpx;
}

/* 列表 */
.orderTitle {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
  margin-bottom: 20rpx;
}

.icon-youjiantou {
  font-size: 24rpx;
  margin-top: -22rpx;
}

.startus {
  position: absolute;
  right: 0;
  top: 0;
  font-weight: bold;
  font-size: 24rpx;
  color: #07C160;
  line-height: 80rpx;
}

.startus-off{
  color: #E71600;
}

.shopWrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.shop {
  width: 80%;
  display: flex;
  align-items: center;
}

.commodityList {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.imgWrap{
  margin: 0 10rpx;
}

.commodityName {
  width: 190rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
}

.ellipsis {
  min-width: 100rpx;
  letter-spacing: 6rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.omit {
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 20rpx;
}

.orderDate {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #666666;
  font-size: 26rpx;
}

.btnWrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.tanhao{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background: #f74747;
  color: #fff;
  border-radius: 50%;
  display: inline-block;
  font-weight: bold;
}
.btns{
  display: flex;
  align-items: center;
  margin-left: auto;
}
.btn {
  width: 130rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  font-size: 26rpx;
  border: 2rpx solid #999999;
  color: #999;
  border-radius: 16rpx;
  margin-left: 20rpx;
}

.btn1:first-child {
  background: linear-gradient(90deg, #FF6F03 0%, #FEB906 100%);
  box-shadow: 0 4rpx 12rpx 0px rgba(255, 118, 4, 0.5);
  color: #fff;
  border: none;
}