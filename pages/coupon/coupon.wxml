<!--pages/coupon/coupon.wxml-->
<!-- <navigationBar back text="活动" /> -->
<image class="img" style="width: 100%;height: {{clientHeight}}px;" src="/assets/img/coupon.jpg">
  <view class="btn" bindtap="robcouponFn">抢</view>
  <view class="coupon">
    <view class="coupon-child" wx:if="{{sceneType == 0}}">
      <view class="guli">{{coupon.bagName}}</view>
      <view style="margin: 20rpx 0;">有机会获得以下奖励</view>
      <view class="discountCouponList">
        <block wx:for="{{coupon.coupons}}" wx:key="index">
          <view class="discountCoupon">
            <view class="money"><text style="font-size: 50rpx;">{{item.money}}</text>￥</view>
            <view style="color: #893204;font-size: 28rpx;">{{item.couponName}}</view>
          </view>
        </block>
      </view>
    </view>
    <view wx:else>
      <view class="discountCouponList">
        <view class="discountCoupon">
          <view class="money"><text style="font-size: 50rpx;">{{coupon.money}}</text>￥</view>
          <view style="color: #893204;font-size: 28rpx;">{{coupon.couponName}}</view>
        </view>
      </view>
    </view>
  </view>
</image>
<van-dialog id="van-dialog" />
