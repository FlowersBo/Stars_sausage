/* pages/coupon/coupon.wxss */
page {
  width: 100%;
  height: 100%;
}

.img {
  position: relative;
}

.btn {
  position: absolute;
  top: 59%;
  left: 50%;
  width: 260rpx;
  height: 260rpx;
  margin-left: -146rpx;
  margin-top: -146rpx;
  border-radius: 50%;
  background: red;
  color: #fff;
  font-size: 170rpx;
  font-weight: bold;
  text-align: center;
  line-height: 250rpx;
  border: 16rpx solid #fff;
  animation: btn 2s linear infinite;
}

@keyframes btn{
  0%{transform: scale(.9); opacity: .9;}
  25%{transform:  scale(1); opacity: 1;}
  100%{transform:  scale(.9); opacity: .9;}
}

.coupon {
  position: absolute;
  top: 72%;
  left: 0;
  width: 100%;
}

.coupon-child{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.guli {
  width: 540rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 6rpx solid #E37021;
  text-align: center;
  line-height: 80rpx;
  background: #913801;
  font-size: 48rpx;
  font-weight: bold;
  color: #F2BC43;
  letter-spacing: 24rpx;
  text-indent: 6rpx;
}

.discountCouponList {
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  display: flex;
  justify-content: center;
}

.discountCoupon {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #333;
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

.money {
  width: 70%;
  text-align: center;
  border-bottom: 4rpx dotted #333;
  color: #984708;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}