/* pages/template/template.wxss */
.integral {
  position: absolute;
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  top: 200rpx;
  left: 50%;
  margin-left: -345rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 50rpx;
}

.off-integral{
  justify-content: center;
}

.cutIntegral {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #FF911D;
  color: #fff;
  font-size: 28rpx;
}

.integralDetail {
  height: 65%;
  top: 460rpx;
  box-shadow: 2rpx 10rpx 12rpx rgba(0, 0, 0, .1);
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-bottom: 20rpx;
}

.nav {
  width: 690rpx;
  height: 100rpx;
  position: fixed;
  left: 30rpx;
  /* margin-left: -50%; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 100;
}

.nav .navigate-item {
  width: 50%;
  text-align: center;
}

.nav .navigate-item:first-child {
  border-right: 2rpx solid #eee;
}

.active {
  color: #FF911D;
  font-weight: bold;
  font-size: 34rpx;
}

.integral-item {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
}

.item-left view {
  margin: 10rpx 0;
}

.item-right view {
  margin: 10rpx 0;
  margin-left: auto;
}

.giveStatus {
  width: 110rpx;
  font-size: 22rpx;
  color: #FF911D;
  border-radius: 6rpx;
  border: 2rpx solid #FF911D;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.youhuiquanWrap {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.youhuiquan {
  width: 156rpx;
  height: 186rpx;
  text-align: center;
  background: #fff;
  font-size: 28rpx;
  position: relative;
  border-radius: 12rpx;
  border: 2rpx solid #bbb;
  margin: 20rpx;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

.youhuiquan::before,
.youhuiquan::after {
  background-color: #fff;
  border-radius: 50%;
  content: '';
  width: 12rpx;
  height: 24rpx;
  position: absolute;
  z-index: 1;
  top: 50%;
  margin-top: -12rpx;
  border: 2rpx solid #bbb;
}

.youhuiquan::before {
  left: -2rpx;
  border-radius: 0 12rpx 12rpx 0;
  border-left: 2rpx solid #fff;
}

.youhuiquan::after {
  right: -2rpx;
  border-radius: 12rpx 0 0 12rpx;
  border-right: 2rpx solid #fff;
}

.youhuiquan view {
  height: 50%;
  text-align: center;
}

.youhuiquan view:first-child {
  border-bottom: 2rpx dashed #ddd;
} 

.youhuiquan view:last-child {
  /* line-height: calc(186rpx/2); */
  display: flex;
  align-items: flex-start;
  justify-content: center;
  margin-top: 20rpx;
  color: #555;
}
.youhuiquan-on{
  border: 2rpx solid #FF911D;
}
.youhuiquan-on::before {
  border-left: 2rpx solid #FF911D;
}

.youhuiquan-on::after {
  border-right: 2rpx solid #FF911D;
}

.dgWrap{
  display: inline-block;
  width: 60rpx;
  height: 34rpx;
  background: #FF911D;
  position: absolute;
  right: 0;
  bottom: 0;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.dg{
  display: inline-block;
  width: 22rpx;
  height: 12rpx;
  border-bottom: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  transform: rotate(-45deg);
}
.ticketBtn{
  width: 620rpx;
  height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background: #FF911D;
  border-radius: 50rpx;
  margin-top: 160rpx;
}
.guize{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #aaa;
  font-size: 22rpx;
}

.smallNav{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #aaa;
}
.smallNav view{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.pop-up{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 130rpx;
  color: #555;
  font-size: 32rpx;
}

.circle{
  width: 150rpx;
  height: 150rpx;
  background:#ff9900;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.maxdg{
  width: 70rpx;
  height: 40rpx;
  border-left: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
  transform: rotate(-45deg);
  margin-top: -10rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-size: 22rpx 2rpx;
  /* 背景大小 */
  background-repeat: repeat-x;
  /* X轴平铺 */
  background: linear-gradient(to right, #9E9E9E 0%, #9E9E9E 50%, transparent 50%);
  /* 背景设置到50%透明，产生50%的间隔效果 */
}

