/* pages/facilityListMap/addressSearch/addressSearch.wxss */
page{
  background: #f1f1f1;
}
.searchWrap {
  position: relative;
  background: #fafafa;
  padding: 20rpx 0;
}

.search {
  width: 720rpx;
  height: 70rpx;
  border: 2rpx solid #aaa;
  border-radius: 35rpx;
  display: flex;
  /* justify-content: space-between; */
  box-sizing: border-box;
  align-items: center;
  padding: 0 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #aaa;
  margin: 0 auto;
  background: #fafafa;
  /* position: sticky;
  left: 0;
  top: 88px; */
}

.searchChild {
  width: 440rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon-icon-search {
  font-size: 46rpx;
  color: #FFB606;
  margin-left: auto;
}

.picker {
  width: 180rpx;
  height: 100%;
  display: flex;
  align-items: center;
  border-right: 2rpx solid #bbb;
  color: #1f1f1f;
  margin-right: 30rpx;
}

/* 地址列表 */
.addressList {
  width: 100%;
  box-sizing: border-box;
  background: #fafafa;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.addressList:last-child{
  border-radius: 0 0 30rpx 30rpx;
}

/* 点位列表 */
.equipmentList {
  width: 720rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #eee;
  box-shadow: 2rpx 10rpx 6rpx #eee;
  position: relative;
}

.equipmentList:first-child {
  margin-top: 30rpx;
}

.ribbon {
  white-space: nowrap;
  position: absolute;
  font-size: 16rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  right: -40rpx;
  top: 20rpx;
  border-bottom: 40rpx solid #ffbb54;
  border-left: 40rpx solid transparent;
  border-right: 40rpx solid transparent;
  height: 0;
  width: 70rpx;
  transform: rotate(45deg);
  opacity: .9;
}

.no-ribbon {
  border-bottom: 40rpx solid #F66666;
  color: #fff;
}

.equipment-left {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.equipment-right {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navigationBtn {
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  background: #FFB606;
  color: #fff;
  margin-top: 10rpx;
}

.color-on {
  background: #dbd4c4;
  color: #fff;
}

.btnWrap{
  width: 100%;
  background: #f1f1f1;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn {
  width: 720rpx;
  margin: 30rpx auto;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: #FFB606;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 60rpx;
  letter-spacing: 10rpx;
}

.noList {
  background: #ccc;
}