/* pages/facilityList/facilityList.wxss */
.facilityList {
  width: 690rpx;
  margin-top: 30rpx;
}

.facility {
  width: 100%;
  height: 196rpx;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  background: #FFFFFF;
  box-shadow: 0px 1px 10px 0px rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.facility-address {
  flex: 1;
  margin-left: 20rpx;
}

.address {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address>view:first-child {
  max-width: 380rpx;
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address>view:last-child {
  max-width: 130rpx;
  color: #FF6F03;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.facilityDetail{
  color: #666666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  line-height: 50rpx;
}

.facilityDetail>icon{
  margin-right: 6rpx;
  margin-top: -6rpx;
}
.facilityDetail>text{
  display: inline-block;
  max-width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}