/* pages/mine/recharge/recharge.wxss */
page{
  height: 100%;
}

.rechargeWrap{
  width: 700rpx;
  height: calc(100% - 175px);
  position: absolute;
  top: 250rpx;
  left: 50%;
  margin-left: -350rpx;
}

.recharge{
  width: 700rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  box-shadow: 2rpx 10rpx 12rpx rgba(0, 0, 0, .1);
}
.moneyWrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 44rpx;
}
.money{
  width: 260rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  margin: 12rpx 0;
  position: relative;
}
.money-off{
  border: 2rpx solid #FF911D;
}

.tj{
  width: 60rpx;
  height: 30rpx;
  background: #F40024;
  position: absolute;
  color: #fff;
  font-size: 16rpx;
  text-align: center;
  line-height: 30rpx;
  left: 0;
  top: 0;
  border-top-left-radius: 8rpx;
  border-bottom-right-radius: 10rpx;
}

.dgWrap{
  display: inline-block;
  width: 60rpx;
  height: 34rpx;
  background: #FF911D;
  position: absolute;
  right: 0;
  bottom: 0;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dg{
  display: block;
  width: 22rpx;
  height: 12rpx;
  border-bottom: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  transform: rotate(-45deg);
  margin-top: -4rpx;
}

.scrollWrap{
  width: 700rpx;
  margin: 50rpx 0;
  border-radius: 20rpx;
  height: 54%;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  box-shadow: 2rpx 10rpx 12rpx rgba(0, 0, 0, .1);
}

.integralDetail {
  width: 100%;
  height: 90%;
  background: #fff;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
.smallNav{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #aaa;
}
.smallNav view{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.smallNav view:last-child{
  flex: 1.5;
}
.ticketBtn{
  width: 620rpx;
  height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background: #FF911D;
  border-radius: 50rpx;
  margin: 0 auto;
}
.guize{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #aaa;
  font-size: 22rpx;
}