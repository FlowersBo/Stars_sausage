.userWrap {
  width: 100%;
  position: relative;
}

.bg-shadeTop {
  background-image: none;
}

.userNavImg {
  width: 100%;
  height: 440rpx;
}

.userNavImg image {
  width: 100%;
  height: 100%;
}

.userInfo {
  width: 100%;
  height: 440rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
}


.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 160rpx;
  margin-bottom: 20rpx;
}

.userNickName {
  font-size: 15px;
  font-weight: 500;
  color: #FFFFFF;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}


.marketMoneyWrap {
  width: 100%;
}

.subdivideWrap {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  /* box-shadow: 5px 5px 2px #ddd; */
}

.subdivide-icon {
  width: 40rpx;
  height: 40rpx;
}

.subdivide {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  padding-left: 30rpx;
  line-height: 100rpx;
}

.subdivideState {
  color: #ccc;
  margin-left: auto;
}

.img {
  filter: sepia(1%);
  background-blend-mode: lighten;
  background-size: cover;
  position: relative;
  /* background: linear-gradient(to bottom, #f1f1f1, #AACCF9); */
}

.bubble {
  position: absolute;
  top: 180rpx;
  left: 50%;
  /* margin-left: -50rpx; */
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50% 50% 25% 50%;
  transform: rotate(45deg);
  /*盒子阴影 x位移 y位移 羽化 半径 颜色 */
  box-shadow: -8rpx -8rpx 80rpx -8rpx #ee0b97 inset;
  animation: bubble 3s ease-in-out infinite;
}

.bubble::after {
  position: absolute;
  bottom: 0rpx;
  right: 0;
  content: "";
  display: block;
  /*width: 18px;
  height: 18px;
  background: #873940;*/
  transform: rotate(45deg);
  border: 12rpx solid transparent;
  border-right-color: #575354;
  border-radius: 50%;
}

/*泡泡浮动动画*/
@keyframes bubble {

  0%,
  100% {
    transform: translateY(0px) rotate(45deg);
  }

  50% {
    transform: translateY(-30px) rotate(45deg);
  }
}