.img {
  filter: sepia(1%);
  background-blend-mode: lighten;
  background-size: cover;
  position: relative;
  margin-bottom: 10rpx;
  /* background: linear-gradient(to bottom, #f1f1f1, #AACCF9); */
}

.bubble {
  position: absolute;
  bottom: -50rpx;
  right: 30rpx;
  z-index: 1001;
  /* margin-left: -50rpx; */
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  color: #ff4a03;
  background: #fff;
  border-radius: 50% 50% 25% 50%;
  transform: rotate(45deg);
  /*盒子阴影 x位移 y位移 羽化 半径 颜色 */
  box-shadow: -8rpx -8rpx 50rpx -8rpx #873940 inset;
  /* animation: bubble 3s ease-in-out infinite; */
}

.bubble-on {
  box-shadow: -8rpx -8rpx 60rpx -8rpx #FF6F03 inset;
}

.bubble::after {
  position: absolute;
  bottom: 0rpx;
  right: 0;
  content: "";
  display: block;
  /*width: 18px;
  height: 18px;
  background: #873940;*/
  transform: rotate(45deg);
  border: 10rpx solid transparent;
  border-right-color: #6d696a;
  border-radius: 50%;
}

/*气球浮动动画*/
@keyframes bubble {

  0%,
  100% {
    transform: translateY(0px) rotate(45deg);
  }

  50% {
    transform: translateY(-34px) rotate(45deg);
  }
}

