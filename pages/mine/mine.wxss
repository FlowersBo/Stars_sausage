.userWrap {
  width: 96%;
  margin: 0 auto;
  height: calc(100% - 182rpx);
  font-size: 28rpx;
}

.iphoneWrap {
  position: relative;
}

.qipao {
  width: 400rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 10rpx;
  position: absolute;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  top: 130rpx;
  left: 0;
  z-index: 100;
}

.qipao::after {
  position: absolute;
  content: '';
  left: 130rpx;
  top: -40rpx;
  width: 0;
  height: 0;
  font-size: 0;
  border: solid 20rpx;
  border-color: #fafafa #fafafa rgba(0, 0, 0, .5) #fafafa;
}

.userInfo {
  width: 100%;
  display: flex;
  align-items: center;
  /* color: #fff; */
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0;
  font-size: 26rpx;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  position: relative;
  margin-right: 30rpx;
}

.isVip {
  border-color: #FF982B;
}

.avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
}

.avatar-img {
  width: 44rpx;
  height: 36rpx;
  position: absolute;
  right: 0;
  top: 0;
  background: #fafafa;
}

.jifen {
  display: flex;
  align-items: center;
  color: #aaa;
  margin-top: 20rpx;
}

.btn {
  width: 120rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border: 2rpx solid #aaa;
  border-radius: 8rpx;
}

.subdivide {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  padding-left: 30rpx;
  line-height: 100rpx;
}

.subdivideState {
  color: #ccc;
  margin-left: auto;
}

.img {
  filter: sepia(1%);
  background-blend-mode: lighten;
  background-size: cover;
  position: relative;
  /* background: linear-gradient(to bottom, #f1f1f1, #AACCF9); */
}

.bubble {
  position: absolute;
  bottom: -50rpx;
  right: 30rpx;
  z-index: 1001;
  /* margin-left: -50rpx; */
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  color: #ff4a03;
  background: #fff;
  border-radius: 50% 50% 25% 50%;
  transform: rotate(45deg);
  /*盒子阴影 x位移 y位移 羽化 半径 颜色 */
  box-shadow: -8rpx -8rpx 50rpx -8rpx #873940 inset;
  /* animation: bubble 3s ease-in-out infinite; */
}

.bubble-on {
  box-shadow: -8rpx -8rpx 60rpx -8rpx #FF6F03 inset;
}

.bubble::after {
  position: absolute;
  bottom: 0rpx;
  right: 0;
  content: "";
  display: block;
  /*width: 18px;
  height: 18px;
  background: #873940;*/
  transform: rotate(45deg);
  border: 10rpx solid transparent;
  border-right-color: #6d696a;
  border-radius: 50%;
}

/*气球浮动动画*/
@keyframes bubble {

  0%,
  100% {
    transform: translateY(0px) rotate(45deg);
  }

  50% {
    transform: translateY(-34px) rotate(45deg);
  }
}

.vipCard {
  width: 100%;
  height: 280rpx;
  color: #fff;
}

.card-top {
  height: 50%;
  line-height: 140rpx;
  background: #BABABA;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  padding-left: 50rpx;
}

.card-bottom {
  height: 50%;
  background: linear-gradient(90deg, #FF6F03 0%, #FEB906 100%);
  border-radius: 0 0 20rpx 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-bottom-on {
  background: #BABABA;
}

.vip {
  display: inline-block;
  width: 152rpx;
  height: 54rpx;
  border: 4rpx solid #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 54rpx;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.refill {
  background: #fff;
  color: #FF982B;
  border: none;
  border-radius: 27rpx;
  padding: 4rpx 6rpx;
  margin-right: 0;
}

.card-top-on {
  background: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 30rpx;
}

.vip-on {
  width: 120rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  border-left: solid 4rpx #fff;
  border-top: solid 4rpx #fff;
  border-bottom: solid 4rpx #fff;
  position: relative;
}

.vip-on::after {
  width: 46rpx;
  height: 46rpx;
  content: '';
  position: absolute;
  right: -22rpx;
  top: 4rpx;
  border-top: solid 4rpx #fff;
  border-right: solid 4rpx #fff;
  transform: rotate(45deg);
  border-radius: 10rpx;
  /* border: solid 27rpx; */
  /* border-color: #FEAE06 #FEAE06 #FEAE06 #fff; */
}

.navWrap {
  width: 100%;
  height: 260rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  box-shadow: 0rpx 8rpx 14rpx rgba(0, 0, 0, .1);
}

.imgWrap {
  display: flex;
  align-items: center;
